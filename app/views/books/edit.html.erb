<h1>Editing Book</h1>


  <% if @book.errors.any? %>
  <div class = "alert">
    <a><%= @book.errors.count %> errors prohibited this book from being saved:</a>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<td><%= link_to "Show", book_path(@book.id) %></td>
<td><%= link_to "Back", books_path %></td>

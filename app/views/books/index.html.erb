<h1>Books</h1>

 <% if flash[:notice] %>
   <p id="notice">
     <%= flash[:notice] %>
   </p>
 <% end %>

<main>
<table>
 <tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3">Menu</th>
 </tr>

 <% @books.each do |book| %>
  <tr align="left">
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book.id) %></td>
   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Areyousure?" %></td>
  </tr>
 <% end %>
</table>
</main>


<body>
  <h2>New Book</h2>
  <% if @book.errors.any? %>
  <div class = "alert">
    <a><%= @book.errors.count %> errors prohibited this book from being saved:</a>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <h2>Title</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %>
  </p>
  <% end %>
</body>